<%= form_with(model: task, local: true ) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <div class="task_title">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>
    <div class="task_title">
      <%= form.label :content %>
      <%= form.text_field :content %>
    </div>
    <div class="task_title">
      <%= form.label :deadline %>
      <%= form.date_field :deadline %>
    </div>
    <div class="task_title">
      <%= form.label :status %>
      <%= form.select :status, options_for_select(Task.statuses.keys.to_a), {prompt: "選択してください"}, class: "prefecture-select" %>
    </div>
    <div class="task_title">
      <%= form.label :priority %>
      <%= form.select :priority, options_for_select(Task.priorities.keys.to_a), {prompt: "選択してください"}, class: "prefecture-select" %>
    </div>

    <%= form.submit %>
  </div>

<% end %>
