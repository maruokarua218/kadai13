<h1><%= @user.name %>のページ</h1>

<p>メールアドレス: <%= @user.email %></p>

<table>
  <thead>
    <tr>
      <th>タスク名</th>
      <th>タスク詳細</th>
      <th scope = "col" ><%= link_to '終了期限', tasks_path(sort_deadline: "true") %></th>
      <th>状況</th>
      <th scope = "col" ><%= link_to '優先度', tasks_path(sort_priority: "true") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

<% @user_tasks.each do |task| %>
  <tr>
    <td><%= task.user.name %></td>
    <td><%= task.title %></td>
    <td><%= task.content %></td>
    <td><%= task.deadline %></td>
    <td><%= task.status %></td>
    <td><%= task.priority %></td>
  </tr>
<% end %>
<%= link_to 'Edit', edit_admin_user_path(@user.id) %>
<%= link_to 'Destroy', admin_user_path(@user.id), method: :delete, data: { confirm: 'Are you sure?' } %>
<%= link_to 'Back', admin_users_path %>
