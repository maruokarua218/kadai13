<h1 class="p-3 mb-2 bg-dark text-white">Management screen</h1>
<%= link_to 'New User', new_admin_user_path %>

<table>
  <thead>
    <tr>
      <th>ユーザー</th>
      <th>管理者権限</th>
      <th>タスク投稿数</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <% counter = 0 %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.admin %></td>
        <% user.tasks.each do |task| %>
            <% counter += 1 %>
        <% end %>
        <td><%= counter %></td>

        <td><%= link_to 'Show', admin_user_path(user.id) %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(user.id) %></td>
        <td><%= link_to 'Destroy', admin_user_path(user.id), method: :delete, data: { confirm: 'Are you sure?' },class:"btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
